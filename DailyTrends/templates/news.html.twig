{% extends 'base.html.twig' %}

{% block body %}
    {% for article in articles %}
        <h2>{{ article.title }}</h2>
        <p>{{ article.description }}</p>
        <p>{{ article.content }}</p>
        <a href="{{ article.url }}">Ver noticia completa</a>
        <img src="{{ article.image }}" alt="{{ article.title }}">
        <p>{{ article.publishedAt }}</p>
    {% endfor %}
{% endblock %}